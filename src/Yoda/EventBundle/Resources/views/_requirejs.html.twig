<script src="{{ asset(assetsPath~'/vendor/requirejs/require.js') }}"></script>
<script>

    // let the baseUrl be dynamic so we can use the compiled assets when needed
    requirejs.config({
        baseUrl: '/{{ assetsPath }}/js'
    });

    require(['common', 'app/default'], function (common) {
        {% if module %}
            require(['{{ module }}']);
        {% endif %}
    });
</script>
